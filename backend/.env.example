# Server Configuration
PORT=5001
NODE_ENV=development

# MongoDB Configuration
# Option 1: Local MongoDB
MONGODB_URI=mongodb://localhost:27017/event-network

# Option 2: MongoDB Atlas (replace with your connection string)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/event-network?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=24h

# Rate Limiting
MAX_LOGIN_REQUESTS=5
LOGIN_WINDOW_MS=900000

# CORS Configuration
FRONTEND_URL=http://localhost:3001
